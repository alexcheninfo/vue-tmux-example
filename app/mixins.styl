border-radius($radius) {
  -webkit-border-radius: $radius
  -moz-border-radius: $radius
  border-radius: $radius
}

box-shadow($pos, $size, $color) {
  -webkit-box-shadow: $pos $size $color
  -moz-box-shadow: $pos $size $color
  box-shadow: $pos $size $color
}

filter-drop-shadow($pos, $size, $color) {
  -webkit-filter: drop-shadow($pos $size $color)
  -moz-filter: drop-shadow($pos $size $color)
  filter: drop-shadow($pos $size $color)
}
