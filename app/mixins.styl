/* Basic */

border-radius($radius) {
  -webkit-border-radius: $radius
  -moz-border-radius: $radius
  border-radius: $radius
}

box-shadow($position, $size, $color) {
  -webkit-box-shadow: $position $size $color
  -moz-box-shadow: $position $size $color
  box-shadow: $position $size $color
}

filter-drop-shadow($position, $size, $color) {
  -webkit-filter: drop-shadow($position $size $color)
  -moz-filter: drop-shadow($position $size $color)
  filter: drop-shadow($position $size $color)
}

/* Hovers */

bob-hover($duration, $position) {
  transition: all $duration ease

  &:hover {
    -webkit-transform: translate($position)
    transform: translate($position)
  }
}

/* Transitions */

scale-transition() {
  &.v-transition {
    transition: all .2s ease
  }

  &.v-enter, .v-leave {
    -webkit-transform: scale(0.9)
    transform: scale(0.9)
  }
}
